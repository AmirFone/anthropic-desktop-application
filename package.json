{
  "name": "anthropic-chat-app",
  "version": "1.0.0",
  "description": "Desktop chat application using Anthropic's API",
  "main": "main/main.js",
  "scripts": {
    "start": "webpack serve --mode development --hot & electron .",
    "dev": "concurrently \"webpack serve --mode development\" \"electron .\"",
    "build": "webpack --mode production && electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yourdomain.anthropic-chat-app",
    "productName": "Anthropic Chat App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "renderer/public/**/*",
      "renderer/src/dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "extraResources": [
      {
        "from": "renderer/public/",
        "to": "renderer/public/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "babel-loader": "^9.2.1",
    "concurrently": "^8.2.1",
    "css-loader": "^6.11.0",
    "electron": "^26.3.0",
    "electron-builder": "^24.6.4",
    "style-loader": "^3.3.4",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.3.1",
    "firebase": "^9.23.0",
    "firebase-admin": "^11.11.1",
    "react": "^18.3.1",
    "react-audio-voice-recorder": "^2.2.0",
    "react-dom": "^18.3.1",
    "react-media-recorder": "^1.7.1",
    "react-mic": "^12.4.6",
    "react-redux": "^9.1.2",
    "redux": "^5.0.1",
    "screenshot-desktop": "^1.15.0"
  }
}
